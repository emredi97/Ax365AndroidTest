<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="emre.ax365test.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="Login"
            android:text="Anmelden"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/data"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="93dp" />

        <Button
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="doRequest"
            android:text="anfordern"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="161dp" />

        <Button
            android:id="@+id/show_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onListButtonClick"
            android:text="Liste" />

        <Button
            android:id="@+id/scan"
            android:onClick="Scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanner" />

        <TextView
            android:id="@+id/reult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="Ergebniss"
            android:onClick="onBarcodeclick"/>

        <Button
            android:id="@+id/req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request"
            android:onClick="req"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
